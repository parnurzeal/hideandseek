[user]
	name = parnurzeal
	email = parnurzeal@gmail.com
[push]
	default = simple
[core]
	editor = /usr/bin/vim
  whitespace = trailing-space
[ghq]
	root = /Users/ParNurZeal/Playground/ghq/src
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[alias]
  st          =  status
  cm          =  commit
  cma         =  commit -a
  cmam        =  commit -a --amend
  co          =  checkout
  cb          =  checkout -b
  w           =  whatchanged
  b           =  branch
  ft          =  fetch
  ps          =  push
  di          =  diff
  sh          =  show
[rebase]
  autosquash  = true
[color]
  ui          =  auto
  diff        =  auto
  status      =  auto
  branch      =  auto
[color "diff"]
  meta        =  cyan
  frag        =  yellow
  old         =  red
  new         =  green
[color "status"]
  added       =  green
  changed     =  yellow
  untracked   =  red
[color "branch"]
  current     =  yellow reverse
  local       =  yellow
  remote      =  green

